<Window x:Class="WpfCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCalculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="400">
    <Grid Width="Auto" Height="Auto" Background="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}">
        <TextBlock HorizontalAlignment="Left" Margin="0,0,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <Grid x:Name="KeysGrid" Margin="24,260,32,64" Grid.Row="5" Grid.Column="4" RenderTransformOrigin="0.5,0.5">
            <Grid.Resources>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="4"/>
                </Style>
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <!-- Add more RowDefinitions as needed -->
            </Grid.RowDefinitions>
            <Button Content="7" Tag="7" Grid.Column="0" Grid.Row="1" Height="Auto" Width="Auto" Click="Button_Click"/>
            <Button Content="8" Tag="8" Grid.Column="1" Grid.Row="1" Height="Auto" Width="Auto" Click="Button_Click"/>
            <Button Content="9" Tag="0" Grid.Column="2" Grid.Row="1" Height="Auto" Width="Auto" Click="Button_Click"/>
            <Button Content="4" Tag="4" Grid.Column="0" Grid.Row="2" Height="Auto" Width="Auto" Click="Button_Click"/>
            <Button Content="5" Tag="5" Grid.Column="1" Grid.Row="2" Height="Auto" Width="Auto" Click="Button_Click"/>
            <Button Content="6" Tag="6" Grid.Column="2" Grid.Row="2" Height="Auto" Width="Auto" Click="Button_Click"/>
            <Button Content="1" Tag="1" Grid.Column="0" Grid.Row="3" Height="Auto" Width="Auto" Click="Button_Click"/>
            <Button Content="2" Tag="2" Grid.Column="1" Grid.Row="3" Height="Auto" Width="Auto" Click="Button_Click"/>
            <Button Content="3" Tag="3" Grid.Column="2" Grid.Row="3" Height="Auto" Width="Auto" Click="Button_Click"/>
            <Button Content="0" Tag="0" Grid.Column="1" Grid.Row="4" Height="Auto" Width="Auto" Click="Button_Click"/>
            <Button Content="." Tag="." Grid.Column="2" Grid.Row="4" Height="Auto" Width="Auto" Click="Button_Click"/>
            <Button Content="+/-" Tag="" Grid.Column="0" Grid.Row="4" Height="Auto" Width="Auto" Click="Button_Click"/>

            <Button Content="←" Tag="3" Grid.Column="2" Grid.Row="0" Height="Auto" Width="Auto" Click="Button_Click" Background="#FFFFBBBB"/>
            <Button Content="C" Tag="3" Grid.Column="1" Grid.Row="0" Height="Auto" Width="Auto" Click="Button_Click" Background="#FFFFBBBB"/>
            <Button Content="CE" Tag="3" Grid.Column="0" Grid.Row="0" Height="Auto" Width="Auto" Click="Button_Click" Background="#FFFFBBBB"/>

            <Button Content="/" Tag="3" Grid.Column="3" Grid.Row="0" Height="Auto" Width="Auto" Click="Button_Click" Background="#FFDFE4FF"/>
            <Button Content="*" Tag="3" Grid.Column="3" Grid.Row="1" Height="Auto" Width="Auto" Click="Button_Click" Background="#FFDFE4FF"/>
            <Button Content="-" Tag="3" Grid.Column="3" Grid.Row="2" Height="Auto" Width="Auto" Click="Button_Click" Background="#FFDFE4FF"/>
            <Button Content="+" Tag="3" Grid.Column="3" Grid.Row="3" Height="Auto" Width="Auto" Click="Button_Click" Background="#FFDFE4FF"/>
            
            <Button Content="=" Tag="3" Grid.Column="3" Grid.Row="4" Height="Auto" Width="Auto" Click="Button_Click" Background="#FF9793FF"/>

        </Grid>
    </Grid>
</Window>
