<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style x:Key="BaseCalculatorButtonStyle" TargetType="Button">
        <Setter Property="Margin" Value="4"/>
        <Setter Property="FontSize" Value="24"/>
    </Style>

    <Style x:Key="DigitButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseCalculatorButtonStyle}">
        <Setter Property="Background" Value="LightGray"/>
    </Style>

    <Style x:Key="OperandButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseCalculatorButtonStyle}">
        <Setter Property="Background" Value="#FFDFE4FF"/>
    </Style>

    <Style x:Key="DeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseCalculatorButtonStyle}">
        <Setter Property="Background" Value="#FFFFBBBB"/>
    </Style>

    <Style x:Key="CalculateButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseCalculatorButtonStyle}">
        <Setter Property="Background" Value="#FF9793FF"/>
    </Style>

</ResourceDictionary>